// https://cses.fi/problemset/result/11900367/ 
#include <iostream> 
#include <vector> 
using namespace std; 
int n; 
const int mod = 1000000007; 
int main() { 
    ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0); 
    cin >> n; 
    vector<int> dp(1000001, 0); 
    dp[0] = 1; 
    for (int i = 1; i <= n; i++) {  
        for (int j = 1; j <= 6; j++) {   
            if (i - j >= 0) dp[i] = (dp[i] + dp[i - j]) % mod; 
        } 
    } 
    cout << dp[n]; 
}  
